
{% for image in field.value%}
        <a href="#" class="ea-lightbox-thumbnail" data-ea-lightbox-content-selector="#ea-lightbox-{{ image.getId() }}" >
            <img src="{{ home_directory }}/uploads/{{ image.getFilePath() }}" class="img-fluid" style="width: 100px; height:100px;">
        </a>

        <div id="ea-lightbox-{{ image.getId() }}" class="ea-lightbox">
                <img src="{{ home_directory }}/uploads/{{ image.getFilePath() }}">
        </div>
{% endfor %}